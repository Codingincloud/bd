{% extends 'donor/base_donor.html' %}
{% load static %}

{% block title %}Update Location | Blood Donor System{% endblock %}

{% block extra_css %}
<style>
    .location-container {
        max-width: 900px;
        margin: 0 auto;
        padding: var(--space-6);
    }

    .header {
        background: white;
        padding: var(--space-8);
        border-radius: var(--radius-xl);
        margin-bottom: var(--space-8);
        text-align: center;
        box-shadow: var(--shadow-md);
    }

    .header h1 {
        color: var(--color-primary-600);
        margin-bottom: var(--space-2);
        font-size: var(--text-3xl);
        font-weight: 700;
    }

    .header p {
        color: var(--color-gray-700);
        font-size: var(--text-lg);
        font-weight: 500;
        opacity: 1;
    }

    .form-container {
        background: white;
        padding: var(--space-8);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-md);
        margin-bottom: var(--space-6);
    }
            margin-bottom: 30px;
        }

        .form-section h3 {
            color: #d32f2f;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #f0f0f0;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 600;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.3s;
        }

        .form-control:focus {
            outline: none;
            border-color: #d32f2f;
        }

        .btn {
            background: linear-gradient(135deg, #d32f2f, #b71c1c);
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.3s;
            margin-right: 10px;
            margin-bottom: 10px;
        }

        .btn:hover {
            transform: translateY(-2px);
        }

        .btn-secondary {
            background: #6c757d;
        }

        .btn-success {
            background: #28a745;
        }

        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 8px;
        }

        .alert-success {
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
            color: #155724;
        }

        .alert-error {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            color: #721c24;
        }

        .current-location {
            background: #e3f2fd;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .location-info {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .nav-link {
            display: inline-block;
            color: #d32f2f;
            text-decoration: none;
            margin-bottom: 20px;
        }

        .nav-link:hover {
            text-decoration: underline;
        }

        .form-row {
            display: flex;
            gap: 15px;
        }

        .form-row .form-group {
            flex: 1;
        }

        @media (max-width: 768px) {
            .form-row {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-map-marker-alt"></i> Update Your Location</h1>
            <p>Help us find you during emergencies by updating your location</p>
        </div>

        <a href="{% url 'donor:donor_dashboard' %}" class="nav-link">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>

        {% if messages %}
            {% for message in messages %}
                <div class="alert alert-{% if message.tags == 'error' %}error{% else %}{{ message.tags }}{% endif %}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endif %}

        {% if donor.latitude and donor.longitude %}
            <div class="current-location">
                <h4><i class="fas fa-check-circle"></i> Current Location Saved</h4>
                <p><strong>Address:</strong> {{ donor.full_location }}</p>
                <p><strong>Coordinates:</strong> {{ donor.latitude|floatformat:4 }}, {{ donor.longitude|floatformat:4 }}</p>
            </div>
        {% else %}
            <div class="location-info">
                <h4><i class="fas fa-exclamation-triangle"></i> No Location Set</h4>
                <p>Please set your location to help us find you during blood emergencies.</p>
            </div>
        {% endif %}

        <!-- Quick Location Selection -->
        <div class="form-container">
            <div class="form-section">
                <h3><i class="fas fa-bolt"></i> Quick Location Update</h3>
                <p>Choose your city from the list below for instant location update:</p>
                
                <form method="POST">
                    {% csrf_token %}
                    <input type="hidden" name="form_type" value="simple">
                    
                    <div class="form-group">
                        {{ simple_form.location_choice.label_tag }}
                        {{ simple_form.location_choice }}
                    </div>
                    
                    <div class="form-group" id="custom-fields" style="display: none;">
                        {{ simple_form.custom_city.label_tag }}
                        {{ simple_form.custom_city }}
                        
                        {{ simple_form.custom_address.label_tag }}
                        {{ simple_form.custom_address }}
                    </div>
                    
                    <button type="submit" class="btn">
                        <i class="fas fa-save"></i> Update Location
                    </button>
                </form>
            </div>
        </div>

        <!-- GPS Location Detection -->
        <div class="form-container">
            <div class="form-section">
                <h3><i class="fas fa-satellite"></i> Auto-Detect Current Location</h3>
                <p>Use your device's GPS to automatically detect your current location and fill in address details:</p>

                <button type="button" class="btn btn-success" onclick="detectCurrentLocation()">
                    <i class="fas fa-crosshairs"></i> Detect My Location
                </button>

                <div id="location-status" style="margin-top: 15px; display: none;"></div>

                <!-- Detected Location Details -->
                <div id="detected-location-details" style="display: none; margin-top: 20px; padding: 20px; background: #e8f5e8; border-radius: 8px; border-left: 4px solid #28a745;">
                    <h4><i class="fas fa-map-marker-alt"></i> Detected Location Details</h4>
                    <div id="location-info"></div>
                    <div style="margin-top: 15px;">
                        <button type="button" class="btn btn-primary" onclick="useDetectedLocation()">
                            <i class="fas fa-check"></i> Use This Location
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="clearDetectedLocation()">
                            <i class="fas fa-times"></i> Clear
                        </button>
                    </div>
                </div>

                <!-- Hidden form for coordinates -->
                <form method="POST" action="{% url 'donor:detect_location' %}" id="gps-form" style="display: none;">
                    {% csrf_token %}
                    <input type="hidden" name="latitude" id="detected-lat">
                    <input type="hidden" name="longitude" id="detected-lng">
                </form>
            </div>
        </div>

        <!-- Manual Entry -->
        <div class="form-container">
            <div class="form-section">
                <h3><i class="fas fa-edit"></i> Manual Location Entry</h3>
                <p>Enter your location details manually:</p>
                
                <form method="POST">
                    {% csrf_token %}
                    <input type="hidden" name="form_type" value="detailed">
                    
                    <div class="form-group">
                        {{ detailed_form.address.label_tag }}
                        {{ detailed_form.address }}
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            {{ detailed_form.city.label_tag }}
                            {{ detailed_form.city }}
                        </div>
                        <div class="form-group">
                            {{ detailed_form.state.label_tag }}
                            {{ detailed_form.state }}
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            {{ detailed_form.postal_code.label_tag }}
                            {{ detailed_form.postal_code }}
                        </div>
                        <div class="form-group">
                            <!-- Empty for spacing -->
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            {{ detailed_form.manual_latitude.label_tag }}
                            {{ detailed_form.manual_latitude }}
                            <small>Optional: Enter latitude if known</small>
                        </div>
                        <div class="form-group">
                            {{ detailed_form.manual_longitude.label_tag }}
                            {{ detailed_form.manual_longitude }}
                            <small>Optional: Enter longitude if known</small>
                        </div>
                    </div>
                    
                    {{ detailed_form.latitude }}
                    {{ detailed_form.longitude }}
                    
                    <button type="submit" class="btn">
                        <i class="fas fa-save"></i> Save Detailed Location
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Handle location choice dropdown
        function handleLocationChoice(value) {
            const customFields = document.getElementById('custom-fields');
            const customCity = document.querySelector('input[name="custom_city"]');
            const customAddress = document.querySelector('input[name="custom_address"]');
            
            if (value === 'other') {
                customFields.style.display = 'block';
                customCity.style.display = 'block';
                customAddress.style.display = 'block';
                customCity.required = true;
            } else {
                customFields.style.display = 'none';
                customCity.style.display = 'none';
                customAddress.style.display = 'none';
                customCity.required = false;
            }
        }

        // Enhanced GPS location detection with detailed address information
        let detectedLocationData = null;

        function detectCurrentLocation() {
            const statusDiv = document.getElementById('location-status');
            const detailsDiv = document.getElementById('detected-location-details');

            statusDiv.style.display = 'block';
            statusDiv.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Detecting your location...';
            detailsDiv.style.display = 'none';

            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    function(position) {
                        const lat = position.coords.latitude;
                        const lng = position.coords.longitude;

                        statusDiv.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Getting location details...';

                        // Call the enhanced location detection API
                        fetch('{% url "donor:detect_location" %}', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'X-CSRFToken': document.querySelector('[name=csrfmiddlewaretoken]').value
                            },
                            body: JSON.stringify({
                                latitude: lat,
                                longitude: lng
                            })
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                detectedLocationData = data.location;
                                displayLocationDetails(data.location);
                                statusDiv.innerHTML = '<i class="fas fa-check"></i> Location detected successfully!';
                                statusDiv.style.color = 'green';
                                detailsDiv.style.display = 'block';
                            } else {
                                statusDiv.innerHTML = `<i class="fas fa-times"></i> Error: ${data.error}`;
                                statusDiv.style.color = 'red';
                            }
                        })
                        .catch(error => {
                            statusDiv.innerHTML = `<i class="fas fa-times"></i> Error getting location details: ${error.message}`;
                            statusDiv.style.color = 'red';
                        });
                    },
                    function(error) {
                        statusDiv.innerHTML = `<i class="fas fa-times"></i> GPS Error: ${error.message}`;
                        statusDiv.style.color = 'red';
                    },
                    {
                        enableHighAccuracy: true,
                        timeout: 15000,
                        maximumAge: 60000
                    }
                );
            } else {
                statusDiv.innerHTML = '<i class="fas fa-times"></i> Geolocation is not supported by this browser.';
                statusDiv.style.color = 'red';
            }
        }

        function displayLocationDetails(location) {
            const infoDiv = document.getElementById('location-info');

            let html = `
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 15px;">
                    <div>
                        <strong><i class="fas fa-map-marker-alt"></i> Address:</strong><br>
                        ${location.formatted_address || 'Address not available'}
                    </div>
                    <div>
                        <strong><i class="fas fa-city"></i> City:</strong><br>
                        ${location.city || 'Not available'}
                    </div>
                    ${location.district ? `<div><strong><i class="fas fa-map"></i> District:</strong><br>${location.district}</div>` : ''}
                    ${location.state ? `<div><strong><i class="fas fa-flag"></i> State/Province:</strong><br>${location.state}</div>` : ''}
                    ${location.postcode ? `<div><strong><i class="fas fa-mail-bulk"></i> Postal Code:</strong><br>${location.postcode}</div>` : ''}
                    ${location.ward ? `<div><strong><i class="fas fa-building"></i> Ward:</strong><br>Ward ${location.ward}</div>` : ''}
                </div>
                <div style="margin-top: 15px; padding: 10px; background: #f8f9fa; border-radius: 5px;">
                    <strong><i class="fas fa-crosshairs"></i> Coordinates:</strong>
                    ${location.latitude.toFixed(6)}, ${location.longitude.toFixed(6)}
                </div>
            `;

            infoDiv.innerHTML = html;
        }

        function useDetectedLocation() {
            if (detectedLocationData) {
                const statusDiv = document.getElementById('location-status');
                statusDiv.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving location...';
                statusDiv.style.color = 'blue';

                console.log('Saving location data:', detectedLocationData); // Debug log

                // Save location to database
                fetch('{% url "donor:save_detected_location" %}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRFToken': document.querySelector('[name=csrfmiddlewaretoken]').value
                    },
                    body: JSON.stringify(detectedLocationData)
                })
                .then(response => {
                    console.log('Response status:', response.status); // Debug log
                    return response.json();
                })
                .then(data => {
                    console.log('Response data:', data); // Debug log
                    if (data.success) {
                        // Auto-fill the form with detected location data

                        // Target the simple form (Quick Location Update)
                        const simpleLocationSelect = document.querySelector('select[name="location_choice"]');
                        const customCityField = document.querySelector('input[name="custom_city"]');
                        const customAddressField = document.querySelector('input[name="custom_address"]');

                        // Target the detailed form (Manual Location Entry)
                        const detailedAddressField = document.querySelector('textarea[name="address"]');
                        const detailedCityField = document.querySelector('input[name="city"]');
                        const detailedStateField = document.querySelector('input[name="state"]');
                        const detailedPostalField = document.querySelector('input[name="postal_code"]');

                        // Fill the detailed form (Manual Location Entry) - this is the main form
                        if (detailedAddressField && detectedLocationData.suggested_address) {
                            detailedAddressField.value = detectedLocationData.suggested_address;
                        }

                        if (detailedCityField && detectedLocationData.city) {
                            detailedCityField.value = detectedLocationData.city;
                        }

                        if (detailedStateField && detectedLocationData.state) {
                            detailedStateField.value = detectedLocationData.state;
                        }

                        if (detailedPostalField && detectedLocationData.postcode) {
                            detailedPostalField.value = detectedLocationData.postcode;
                        }

                        // Try to set the simple form dropdown if city matches
                        if (simpleLocationSelect && detectedLocationData.city) {
                            let cityFound = false;
                            // Check if the detected city matches any option in the dropdown
                            for (let i = 0; i < simpleLocationSelect.options.length; i++) {
                                const option = simpleLocationSelect.options[i];
                                if (option.text.toLowerCase().includes(detectedLocationData.city.toLowerCase()) ||
                                    option.value.toLowerCase().includes(detectedLocationData.city.toLowerCase())) {
                                    option.selected = true;
                                    simpleLocationSelect.value = option.value;
                                    cityFound = true;
                                    break;
                                }
                            }

                            // If city not found in dropdown, select "other" and fill custom fields
                            if (!cityFound) {
                                const otherOption = simpleLocationSelect.querySelector('option[value="other"]');
                                if (otherOption) {
                                    otherOption.selected = true;
                                    simpleLocationSelect.value = 'other';

                                    // Show custom fields
                                    const customFields = document.getElementById('custom-fields');
                                    if (customFields) {
                                        customFields.style.display = 'block';
                                    }

                                    // Fill custom fields
                                    if (customCityField) {
                                        customCityField.value = detectedLocationData.city;
                                        customCityField.style.display = 'block';
                                    }
                                    if (customAddressField) {
                                        customAddressField.value = detectedLocationData.suggested_address;
                                        customAddressField.style.display = 'block';
                                    }
                                }
                            }
                        }

                        // Show success message
                        statusDiv.innerHTML = '<i class="fas fa-check"></i> Location saved and form updated successfully!';
                        statusDiv.style.color = 'green';

                        // Hide the detected location details after successful save
                        setTimeout(() => {
                            document.getElementById('detected-location-details').style.display = 'none';
                        }, 2000);

                        // Scroll to the form
                        document.querySelector('.form-container').scrollIntoView({ behavior: 'smooth' });
                    } else {
                        statusDiv.innerHTML = `<i class="fas fa-times"></i> Error saving location: ${data.error}`;
                        statusDiv.style.color = 'red';
                    }
                })
                .catch(error => {
                    statusDiv.innerHTML = `<i class="fas fa-times"></i> Error saving location: ${error.message}`;
                    statusDiv.style.color = 'red';
                });
            }
        }

        function clearDetectedLocation() {
            detectedLocationData = null;
            document.getElementById('detected-location-details').style.display = 'none';
            document.getElementById('location-status').style.display = 'none';
        }
    </script>
</body>
</html>
